.row-fluid
  .span2
    = image_tag(profile.gravatar, alt: profile.username, class: 'img-polaroid')
  .span10
    %h3
      = profile.username
      %span.muted
        = succeed ':' do
          tags
      %span.text-success
        = current_tag
    %ul.gists
      - gists.each do |gist|
        %li
          = link_to gist.description, gist.url
    .pagination.pagination-mini
      = will_paginate gists
