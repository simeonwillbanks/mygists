.row-fluid
  .span2
    = image_tag(profile.gravatar, alt: profile.username, class: "img-polaroid")
  #profile-header.span10
    %h3
      = link_to profile.username, profile_path(profile)
      %span.muted{ id:"tag-tooltip", rel: "tooltip", title: "Include one or many #hashtags in each gist description" }
        = succeed ":" do
          tags
      %span.text-success
        = current_tag
    #gists
      - gists.each do |gist|
        .row-fluid
          .span1
            = gist.icons
          .span11
            %p
              = link_to gist.description, gist.url, target: "_blank"
    .pagination.pagination-mini
      = will_paginate gists
