.row-fluid
  .span2
    = profile.gravatar
  #profile-header.span10
    %h3
      = link_to profile.username, profile_path(profile)
      %span.muted{ id:"tag-tooltip", rel: "tooltip", title: "Include one or many #hashtags in each gist description" }
        = succeed ":" do
          tags
      %span.text-success
        = current_tag
    - if gists.empty?
      %p
        %strong= profile.username
        has not created any gists tagged with
        = succeed "." do
          %strong= current_tag
    - else
      #gists
        - gists.each do |gist|
          .row-fluid
            .span1
              = gist.icons
            .span11
              %p
                = link_to gist.description, gist.url, target: "_blank"
      .pagination.pagination-mini
        = will_paginate gists
